<h2>Edit Post</h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" />
      <label for="post-content">Content</label>
      <textarea name="post-content">{{post.content}}</textarea>
    </div>
    
    <button type="submit" class="update-post-btn">Update Post</button>
    <button type="button" class="delete-post-btn">Delete</button>
  </form>
</article>

